{% extends 'layouts/app.html.twig' %}

{% block title %}Change password{% endblock %}

{% block body %}

    <div class="form-wrapper form-wrapper--large ">
        <div class="container">
            <div class="card card-large">
                <div class="card-body profile-grid">
                    <div class="border-right px-4">
                        {% include 'user/profile/navigation.html.twig' %}
                    </div>

                    <div>
                        <div class="my-2 text-center mb-4">
                            <h4 class="font-weight-bold">Change password </h4>
                        </div>
                        <div class="mx-4">

                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <div class="d-flex flex-column">
                                <button class="btn btn-success my-3">Submit</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}