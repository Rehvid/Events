{% extends 'layouts/app.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="d-flex justify-content-center align-items-center h-100 w-100">
            <div class="card border-0 shadow col-4 p-5 m-5 rounded-2">
                <h1 class="h3 mb-3 font-weight-normal text-center">Reset your password</h1>

                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>
                        Enter your email address, and we will send you a
                        link to reset your password.
                    </small>
                </div>

                <button class="btn btn-success shadow mt-4 w-100">Send password reset email</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
